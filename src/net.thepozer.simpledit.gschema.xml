<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/net/thepozer/simpledit/" id="net.thepozer.simpledit">
    <key name="font" type="s">
      <default>'Monospace 12'</default>
      <summary>Font</summary>
      <description>The font to be used for content.</description>
    </key>
    <key name="highlight-current-line" type="b">
      <default>false</default>
      <summary>Highlight the current line</summary>
      <description></description>
    </key>
    <key name="show-line-marks" type="b">
      <default>false</default>
      <summary>Show Line Marks</summary>
      <description>Display line marks in the editor.</description>
    </key>
    <key name="show-line-numbers" type="b">
      <default>false</default>
      <summary>Line Number</summary>
      <description>Display line number in the editor.</description>
    </key>
    
    <key name="show-right-margin" type="b">
      <default>false</default>
      <summary>Show the right margin</summary>
      <description></description>
    </key>
    <key name="right-margin-position" type="u">
      <default>72</default>
      <summary>Set the position of the right margin</summary>
      <description></description>
    </key>
    
    <key name="auto-indent" type="b">
      <default>false</default>
      <summary>Auto indentation</summary>
      <description>Activate auto-indentation in the editor.</description>
    </key>
    <key name="indent-on-tab" type="b">
      <default>true</default>
      <summary>Tab key indent code</summary>
      <description></description>
    </key>
    <key name="indent-width" type="i">
      <default>4</default>
      <summary>Space size of indent</summary>
      <description></description>
    </key>
    <key name="insert-spaces-instead-of-tabs" type="b">
      <default>true</default>
      <summary>Insert spaces  instead of tabs for indent</summary>
      <description></description>
    </key>
    <key name="tab-width" type="u">
      <default>4</default>
      <summary>Space size of tab</summary>
      <description></description>
    </key>
    <key name="smart-backspace" type="b">
      <default>false</default>
      <summary>Smart backspace to unindent</summary>
      <description></description>
    </key>
  </schema>
</schemalist>
